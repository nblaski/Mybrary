<div class="jumbotron">
    <h2>Books by Author</h2>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <% if (booksByAuthor.length > 0) { %>
                <% booksByAuthor.forEach(book => { %>
                    <a href="/books/<%= book.id %>">
                        <img class="card-img-top" src="<%= book.coverImagePath %>">
                        <% }); %>
                    </a>    
            <% } %>
            <hr class="my-4">
            <h2><%= author.name %></h2>
            <br>
            <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding-left: 6pt">
                <a href="/authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
                <%- include('../partials/deleteForm',
                                    { url: `/authors/${author.id}` }) %>  
            </nav>                         
        </div>
    </div>
</div>    
